<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  
            <TextView
                android:id="@+id/tv_item_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件名"
                android:textSize="30sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />



     <TextView
         android:id="@+id/tv_item_event_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/tv_item_event_project"
         android:text="时间"
         android:textSize="20sp"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <LinearLayout
         android:id="@+id/ll"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tv_item_event_time" >

         <TextView
             android:id="@+id/tv_item_event_first"
             android:layout_width="wrap_content"
             android:layout_height="20sp"
             android:text="" />

         <TextView
             android:id="@+id/tv_item_event_second"
             android:layout_width="wrap_content"
             android:layout_height="20sp"
             android:text="" />

         <TextView
             android:id="@+id/tv_item_event_forth"
             android:layout_width="wrap_content"
             android:layout_height="20sp"
             android:text="" />

         <TextView
             android:id="@+id/tv_item_event_third"
             android:layout_width="wrap_content"
             android:layout_height="20sp"
             android:text="" />
     </LinearLayout>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/tv_item_event_time"
         android:layout_toLeftOf="@+id/tv_item_event_project"
         android:text="项目:"
         android:textSize="20sp"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <TextView
         android:id="@+id/tv_item_event_project"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:text="所属项目"
         android:textSize="20sp"
         android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout><!-- From: file:/home/gavin/AndroidStudioProjects/EventEveryTime/eventEveryTime/src/main/res/layout/item_event.xml -->